<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OptionsActivity"
    android:id="@+id/pin">

    <TextView
        android:id="@+id/optionsText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="@string/options_text1" />

    <Spinner
        android:id="@+id/numToLearnSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/optionsText1"
        android:layout_below="@+id/optionsText1"
        android:layout_marginLeft="30dp"
        android:entries="@array/numOfWords" />

    <TextView
        android:id="@+id/intervalsOptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/intervals_text"
        android:layout_below="@+id/numToLearnSpinner" />

    <RelativeLayout
        android:id="@+id/revisionLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/intervalsOptionText" >

        <TextView
            android:id="@+id/revisionText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_alignBaseline="@+id/revision_edit1"
	        android:layout_alignBottom="@+id/revision_edit1"
            android:text="@string/revision_interval1" />
	
	    <TextView
	        android:id="@+id/revisionTextDays"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/revision_edit1"
	        android:layout_alignBottom="@+id/revision_edit1"
	        android:layout_toRightOf="@+id/revision_edit1"
	        android:text="@string/revision_text_days" />

	    <EditText
	        android:id="@+id/revision_edit1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/revisionText1"
	        android:inputType="number"
	        android:text="@string/one"
	        android:textAppearance="?android:attr/textAppearanceSmall" >

	    </EditText>
    
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/revisionLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/revisionLayout1" >

        <TextView
            android:id="@+id/revisionText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_alignBaseline="@+id/revision_edit2"
	        android:layout_alignBottom="@+id/revision_edit2"
            android:text="@string/revision_interval2" />

	    <TextView
	        android:id="@id/revisionTextDays"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/revision_edit2"
	        android:layout_alignBottom="@+id/revision_edit2"
	        android:layout_toRightOf="@+id/revision_edit2"
	        android:text="@string/revision_text_days" />

	    <EditText
	        android:id="@+id/revision_edit2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/revisionText2"
	        android:inputType="number"
	        android:text="@string/seven"
	        android:textAppearance="?android:attr/textAppearanceSmall" >

	    </EditText>
    </RelativeLayout>
        <RelativeLayout
        android:id="@+id/revisionLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/revisionLayout2" >

        <TextView
            android:id="@+id/revisionText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_alignBaseline="@+id/revision_edit3"
	        android:layout_alignBottom="@+id/revision_edit3"
            android:text="@string/revision_interval3" />
	
	    <TextView
	        android:id="@id/revisionTextDays"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/revision_edit3"
	        android:layout_alignBottom="@+id/revision_edit3"
	        android:layout_toRightOf="@+id/revision_edit3"
	        android:text="@string/revision_text_days" />

	    <EditText
	        android:id="@+id/revision_edit3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/revisionText3"
	        android:inputType="number"
	        android:text="@string/twenty_eight"
	        android:textAppearance="?android:attr/textAppearanceSmall" >

	    </EditText>
    </RelativeLayout>
        <RelativeLayout
        android:id="@+id/revisionLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/revisionLayout3" >

        <TextView
            android:id="@+id/revisionText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_alignBaseline="@+id/revision_edit4"
	        android:layout_alignBottom="@+id/revision_edit4"
            android:text="@string/revision_interval4" />
	
	    <TextView
	        android:id="@id/revisionTextDays"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/revision_edit4"
	        android:layout_alignBottom="@+id/revision_edit4"
	        android:layout_toRightOf="@+id/revision_edit4"
	        android:text="@string/revision_text_days" />

	    <EditText
	        android:id="@+id/revision_edit4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/revisionText4"
	        android:inputType="number"
	        android:text="@string/one_hundred_and_sixty_eight"
	        android:textAppearance="?android:attr/textAppearanceSmall" >

	    </EditText>

        </RelativeLayout>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testTypeSpinner"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/set_test_type"
        android:id="@+id/textView"
        android:layout_below="@+id/revisionLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/revisionLayout4" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/options_revision_skip_text"
        android:id="@+id/options_revision_skip_checkbox"
        android:checked="false"
        android:layout_below="@+id/testTypeSpinner"
        android:layout_alignParentLeft="true" />
</RelativeLayout><!-- From: file:/C:/Users/Brendan/Dropbox/SuperWord-A-Day/app/src/main/res/layout/activity_options.xml -->